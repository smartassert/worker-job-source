{
    "name": "smartassert/worker-job-source",
    "description": "",
    "keywords": [],
    "homepage": "https://github.com/smartassert/worker-job-source",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Jon Cram",
            "email": "webignition@gmail.com"
        }
    ],
    "scripts": {
        "cs-fixer-dry-run": "./vendor/bin/php-cs-fixer check --allow-risky=yes --verbose --show-progress none",
        "cs-fixer-fix": "./vendor/bin/php-cs-fixer fix --allow-risky=yes --diff",
        "cs-phpcs": "XDEBUG_MODE=off ./vendor/bin/phpcs",
        "cs": [
            "@cs-fixer-dry-run",
            "@cs-phpcs"
        ],
        "static-analysis": "XDEBUG_MODE=off ./vendor/bin/phpstan",
        "test": "XDEBUG_MODE=off ./vendor/bin/phpunit --colors=always tests"
    },
    "autoload": {
        "psr-4": {
            "SmartAssert\\WorkerJobSource\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SmartAssert\\WorkerJobSource\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": "^8.2",
        "smartassert/yaml-file": "^8.0",
        "symfony/yaml": "^6.4 || ^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "squizlabs/php_codesniffer": "^3.8",
        "phpstan/phpstan": "^1.9",
        "phpstan/extension-installer": "^1.2",
        "phpstan/phpstan-phpunit": "^1.3",
        "friendsofphp/php-cs-fixer": "^3.90"
    },
    "minimum-stability":"stable",
    "prefer-stable":true,
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    }
}
